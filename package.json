{
  "name": "cookme_backend_api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:build": "tsc --skipLibCheck --watch",
    "dev:run": "nodemon --quiet --watch dist --exec 'clear;node dist/src/index.js'",
    "dev": "NODE_ENV=development concurrently npm:dev:*",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write --loglevel silent './**/*.{json,js}'",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "db:migrate": "NODE_ENV=development knex migrate:latest",
    "db:rollback": "NODE_ENV=development knex migrate:rollback",
    "db:createMigration": "NODE_ENV=development knex migrate:make",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.ts": "npm run lint:fix",
    "./**/*.{js,json}": "npm run format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/knex": "^0.16.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.33",
    "@types/pg": "^7.14.11",
    "@types/sinon": "^9.0.11",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "concurrently": "^6.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "regenerator-runtime": "^0.13.7",
    "sinon": "^10.0.0",
    "supertest": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.95.4",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^9.1.1"
  }
}
