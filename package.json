{
  "name": "cookme_backend_api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:build": "tsc --skipLibCheck --watch",
    "dev:run": "nodemon --quiet --watch dist --exec 'clear;node dist/index.js'",
    "dev": "NODE_ENV=development concurrently npm:dev:*",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write --loglevel silent './**/*.{json,js}'",
    "test": "NODE_ENV=test jest",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.ts": "npm run lint:fix",
    "./**/*.{js,json}": "npm run format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^6.0.0",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.2.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1"
  }
}
